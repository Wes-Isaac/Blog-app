<div class="user_c">
    <div class="user_data">
        <div class="user_img">
      <%= image_tag("avatar.png", width:'130px', height:'150px') %>
    </div>
      <h2><%= @user.name%></h2>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
  <% @posts.each do |post| %>
  <div class="user_c">
    <div class="user_data_post">
     <%= link_to "#{post.title}", user_post_path(@user.id, post.id), class:"anything" %> 
     <h3><%= post.text%></h3>
      <p>Number of comments: <%= post.comments_counter %> <span>Number of likes: <%= post.likes_counter %></span></p>
    <%if can? :destroy, post %>
      <%= button_to "Delete Post", user_post_path(@user.id, post.id), method: :delete %>
    <%end%>
    </div>
  </div>
  <div class="comments">
    <% post.recent_comments.each do |comment| %>
        <h2><%="#{comment.author.name}: #{comment.text}" %></h2>
    <%end%>
  </div>
<%end%>
<div class="button-div">
  <button class="button"><%=link_to "New Post", new_user_post_path %></button>

</div>