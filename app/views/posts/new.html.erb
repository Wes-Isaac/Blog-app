<h1>New Post</h1>
<%=form_with url: user_posts_path, scope: :data do |f| %>
  <div class= 'title'>
    <%=f.text_field :title, placeholder: 'Title', required: true %>
    <%=f.text_field :text, placeholder: 'Post..', required: true %>
  </div>

  <div class='submit-post'>
    <%=f.submit "Submit"%>
  </div>

<% end %>
